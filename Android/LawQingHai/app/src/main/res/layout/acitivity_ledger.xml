<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/ic_title" />

    <com.scxd.lawqinghai.widget.MyScrollerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <include layout="@layout/ic_car_query_information" />

            <include layout="@layout/ic_driver_query_information" />

            <include layout="@layout/ic_check_information" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.scxd.lawqinghai.widget.MyGrideView
                    android:id="@+id/gridview"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnWidth="5dp"
                    android:numColumns="3"/>

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/add"/>

            </LinearLayout>

            <Button
                android:id="@+id/tj_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_button_blue"
                android:text="@string/tj"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />


        </LinearLayout>
    </com.scxd.lawqinghai.widget.MyScrollerView>
</LinearLayout>