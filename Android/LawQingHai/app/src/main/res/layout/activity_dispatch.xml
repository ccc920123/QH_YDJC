<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/ic_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/login_edit_style"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/circle"
                    android:padding="10dp"
                    android:text="@string/sbkk"
                    android:textColor="@color/blue3"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray001" />

                <com.scxd.lawqinghai.widget.FlowTagLayout
                    android:id="@+id/sbkk_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/login_edit_style"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/circle"
                    android:padding="10dp"
                    android:text="@string/yjlx"
                    android:textColor="@color/blue3"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="已选："
                    android:textColor="@color/black_text02"
                    android:textSize="13sp" />

                <com.scxd.lawqinghai.widget.FlowTagLayout
                    android:id="@+id/yjlx_selected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray001" />

                <LinearLayout
                    android:id="@+id/linertjlx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/login_edit_style"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/circle"
                    android:padding="10dp"
                    android:text="@string/cjry"
                    android:textColor="@color/blue3"
                    android:textSize="17sp" />

                <com.scxd.lawqinghai.widget.FlowTagLayout
                    android:id="@+id/cjry_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />

            </LinearLayout>

            <Button
                android:id="@+id/ksjsyj"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/ic_button_blue"
                android:text="@string/ksjsyj"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>