<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              tools:context="com.scxd.lawqinghai.fragment.TopPeploFragment">

    <!-- TODO: Update blank fragment layout -->
    <include
        layout="@layout/ic_title"/>
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_edit_style">
        
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/ic_login_touxiang"
            android:layout_marginLeft="@dimen/dp_10"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray01"
            android:layout_marginLeft="@dimen/dp_7"/>

        <EditText
            android:id="@+id/sfzmhm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_7"
            android:background="@null"
            android:hint="证件号码"
            android:maxLength="18"
            android:inputType="number"
            android:digits="0123456789xyXY"
            android:textColor="@color/black_text01"
            android:textSize="@dimen/sp_17"/>


        <ImageView
            android:id="@+id/sfzmhm_scan"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/scan_qr"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:layout_margin="30dp"
        android:background="@drawable/login_edit_style">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/ic_login_touxiang"
            android:layout_marginLeft="@dimen/dp_10"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray01"
            android:layout_marginLeft="@dimen/dp_7"/>

        <EditText
            android:id="@+id/zxbh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_7"
            android:background="@null"
            android:hint="证芯编号"
            android:textColor="@color/black_text01"
            android:textSize="@dimen/sp_17"/>


        <ImageView
            android:id="@+id/zxbh_scan"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/scan_qr"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="5dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_query"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/ic_button_blue"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/text_query"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"/>

</LinearLayout>
