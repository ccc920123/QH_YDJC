        android:layerType="software"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        app:tipTextSize="16dp"/>
   
</com.scxd.idcardlibs.FractionTranslateLayout>

